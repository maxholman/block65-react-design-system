{
  "extends": ["@tsconfig/node22", "@tsconfig/strictest"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "composite": true,
    "noPropertyAccessFromIndexSignature": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "files": ["vite.config.ts"],
  "include": ["./bin"]
}
