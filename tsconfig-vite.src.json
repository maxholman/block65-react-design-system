{
  "extends": ["@tsconfig/vite-react", "@tsconfig/strictest"],
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "types": ["vite/client"],
    "allowJs": false,
    "checkJs": false,
    "removeComments": false,
    "allowImportingTsExtensions": false,
    "rootDir": "./",
    "noPropertyAccessFromIndexSignature": false
  },
  "files": ["./vite-env.d.ts"],
  "include": ["./src", "./lib"],
  "exclude": ["./dist", "./build", "node_modules"]
}
